<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- Bootstrap CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-KyZXEAg3QhqLMpG8r+8fhAXLRk2vvoC2f3B09zVXn8CA5QIVfZOJ3BCsw2P0p/We"
      crossorigin="anonymous"
    />

    <title>Express Pizza - Review</title>
  </head>
  <body class="container">
    <h1>Leave A Review</h1>

    <form action="/review-thanks" method="POST">
      <div class="mb-3">
        <label for="name" class="form-label">your name</label>
        <input
          required
          type="text"
          class="form-control"
          id="name"
          name="name"
          aria-describedby="name"
        />
        <div id="nameHelp" class="form-text">We'll never share your information
          with anyone else.</div>
      </div>

      <div class="form-floating mb-3">
        <textarea
          name="comment"
          required
          class="form-control"
          placeholder="Leave a comment here"
          id="comment"
          style="height: 100px"
        ></textarea>
        <label for="comment">Comments</label>
      </div>

      <h3>Rating</h3>
      <div class="mb-3 form-check">
        <input name="rating" type="radio" class="form-check-input" id="five" value="5" checked/>
        <label class="form-check-label" for="five">5 (best)</label>
      </div>
      <div class="mb-3 form-check">
        <input name="rating" type="radio" class="form-check-input" id="four" value="4" />
        <label class="form-check-label" for="four">4</label>
      </div>
      <div class="mb-3 form-check">
        <input name="rating" type="radio" class="form-check-input" id="three" value="3"/>
        <label class="form-check-label" for="three">3</label>
      </div>
      <div class="mb-3 form-check">
        <input name="rating" type="radio" class="form-check-input" id="two" value="2"/>
        <label class="form-check-label" for="two">2</label>
      </div>
      <div class="mb-3 form-check">
        <input name="rating" type="radio" class="form-check-input" id="one" value="1"/>
        <label class="form-check-label" for="one">1 (worst)</label>
      </div>
      <button type="submit" class="btn btn-primary">Submit</button>
      <a href="/">Nevermind.</a>
    </form>

    <!-- Optional JavaScript; choose one of the two! -->

    <!-- Option 1: Bootstrap Bundle with Popper -->
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-U1DAWAznBHeqEIlVSCgzq+c9gqGAJn5c/t99JyeKa9xxaYpSvHU5awsuZVVFIhvj"
      crossorigin="anonymous"
    ></script>

    <!-- Option 2: Separate Popper and Bootstrap JS -->
